<configuration>

    <conversionRule conversionWord="coloredLevel" converterClass="play.api.libs.logback.ColoredLevel" />

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/test.log</file>
        <encoder>
            <pattern>%date [%level] from %logger in %thread - %message%n%xException</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%date %coloredLevel %logger{15} - %message%n%xException{10}</pattern>
        </encoder>
    </appender>

    <appender name="REPORT" class="ch.qos.logback.core.FileAppender">
        <file>logs/report.log</file>
        <encoder>
            <pattern>%date [%level][%logger] - %message%n</pattern>
        </encoder>
    </appender>

    <appender name="FULL" class="ch.qos.logback.core.FileAppender">
        <file>logs/full.log</file>
        <encoder>
            <pattern>%date [%level][%logger] - %message%n</pattern>
        </encoder>
    </appender>

    <logger name="report" level="INFO">
        <appender-ref ref="REPORT" />
        <appender-ref ref="FULL" />
    </logger>

    <logger name="worker" level="INFO">
        <appender-ref ref="FULL" />
    </logger>


    <logger name="play" level="INFO" />
    <logger name="application" level="DEBUG" />

    <!-- Off these ones as they are annoying, and anyway we manage configuration ourself -->
    <logger name="com.avaje.ebean.config.PropertyMapLoader" level="OFF" />
    <logger name="akka.log-dead-letters-during-shutdown" level="OFF"/>
    <logger name="com.avaje.ebeaninternal.server.core.XmlConfigLoader" level="OFF" />
    <logger name="com.avaje.ebeaninternal.server.lib.BackgroundThread" level="OFF" />
    <logger name="com.gargoylesoftware.htmlunit.javascript" level="OFF" />
    <logger name="io.netty" level="OFF"/>
    <logger name="org.asynchttpclient" level="OFF"/>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

</configuration>
